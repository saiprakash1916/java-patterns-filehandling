import java.util.Scanner;
public class Pattern34 {
	public static void main(String[] args) {
		Scanner sc=new Scanner(System.in);
		System.out.println("Enter how many lines");
		int n = sc.nextInt();
		sc.close();
		for(int i=0;i>=n-1;i++) {
			for(int j=0;j<i;j++){
				System.out.print("  ");
			}
			for(int j=i;j<=n-1;j++) {
				System.out.print("* ");		
			}
			System.out.println();
		}
	}
}
