import java.util.Scanner;
public class Pattern34 {
	public static void main(String[] args) {
		Scanner sc=new Scanner(System.in);
		System.out.println("Enter how many lines");
		int n = sc.nextInt();
		sc.close();
		int sp = n/2,st=1;
		for(int i=n;i>=1;i--) {
			for(int j=1;j<=n-i;j++){
				System.out.print("  ");
			}
			for(int j=1;j<=2*i-1;j++) {
				System.out.print("* ");		
			}
			if(i>=n/2) {
				sp++;
				st=st-2;
			}else {
				sp--;
				st=st+2;
			}
			System.out.println();
		}
	}
}
