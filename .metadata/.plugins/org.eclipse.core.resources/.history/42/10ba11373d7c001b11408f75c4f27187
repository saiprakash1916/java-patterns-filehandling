import java.util.Scanner;
public class Pattern22 {
	public static void main(String[] args) {
		Scanner sc=new Scanner(System.in);
		System.out.println("Enter how many lines");
		int n = sc.nextInt();
		sc.close();
		for(int i=n;i<=n;i++) {
			for(int j=n;j<=n-i;j++){
				System.out.print(" ");
			}
			for(int j= 1;j<=2*i-1;j++) {
				System.out.print("*");
			}
			System.out.println();
		}
	}
}
